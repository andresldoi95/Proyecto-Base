<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemSueltosActivity">
    <TextView
        android:layout_marginLeft="@dimen/side_form_margin"
        android:layout_marginRight="@dimen/side_form_margin"
        android:layout_marginTop="@dimen/single_form_updown_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:text="@string/plantilla"
        android:id="@+id/tvPlantilla"
        android:layout_height="wrap_content"></TextView>
    <EditText
        android:layout_marginLeft="@dimen/side_form_margin"
        android:layout_marginRight="@dimen/side_form_margin"
        app:layout_constraintTop_toBottomOf="@id/tvPlantilla"
        android:layout_width="match_parent"
        android:id="@+id/etPlantilla"
        android:inputType="number"
        android:layout_height="wrap_content"></EditText>
    <TextView
        android:layout_marginTop="@dimen/space_form_margin"
        android:layout_marginLeft="@dimen/side_form_margin"
        android:layout_marginRight="@dimen/side_form_margin"
        app:layout_constraintTop_toBottomOf="@id/etPlantilla"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:text="@string/largo"
        android:id="@+id/tvLargo"
        android:layout_height="wrap_content"></TextView>
    <Spinner
        android:layout_marginLeft="@dimen/side_form_margin"
        android:layout_marginRight="@dimen/side_form_margin"
        app:layout_constraintTop_toBottomOf="@id/tvLargo"
        android:layout_width="match_parent"
        android:id="@+id/spnLargo"
        android:layout_height="wrap_content"></Spinner>
    <TextView
        android:layout_marginTop="@dimen/space_form_margin"
        android:layout_marginLeft="@dimen/side_form_margin"
        android:layout_marginRight="@dimen/side_form_margin"
        app:layout_constraintTop_toBottomOf="@id/spnLargo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:text="@string/espesor"
        android:id="@+id/tvEspesor"
        android:layout_height="wrap_content"></TextView>
    <Spinner
        android:layout_marginLeft="@dimen/side_form_margin"
        android:layout_marginRight="@dimen/side_form_margin"
        app:layout_constraintTop_toBottomOf="@id/tvEspesor"
        android:layout_width="match_parent"
        android:id="@+id/spnEspesor"
        android:layout_height="wrap_content"></Spinner>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="@dimen/space_form_margin"
        app:layout_constraintTop_toBottomOf="@id/spnEspesor"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/side_form_margin"
        android:layout_marginRight="@dimen/side_form_margin"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:id="@+id/btnGuardar"
        android:text="@string/guardar"
        android:layout_height="wrap_content"></androidx.appcompat.widget.AppCompatButton>
</androidx.constraintlayout.widget.ConstraintLayout>