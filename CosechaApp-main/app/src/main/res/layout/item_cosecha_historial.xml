<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_updown_item"
    android:paddingBottom="@dimen/padding_updown_item"
    android:paddingLeft="@dimen/padding_side_item"
    android:paddingRight="@dimen/padding_side_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvCosecha"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_fila_camion_margin"
        android:textStyle="bold"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/tvFechaDespacho"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_fila_camion_margin"
        android:textStyle="bold"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvCosecha"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_margin="@dimen/item_fila_camion_margin"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/md_green_400"
        android:textColor="@color/colorWhite"
        android:id="@+id/btnHistorial"
        android:elevation="0dp"
        app:elevation="0dp"
        android:src="@drawable/ic_baseline_eye_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>